<Window x:Class="WPF_Client.CourseViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Client"
        mc:Ignorable="d"
        Title="CourseViewWindow" Height="650" Width="1000">

    <Window.Resources>
        <Style x:Key="buttonTemplate" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="27"/>
            <Setter Property="Foreground" Value="white"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Name="btn" CornerRadius="13" Background="#84C7F2" Padding="2" Opacity="0.86" Margin="0,-5,0,0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid>


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="96"/>
            <ColumnDefinition Width="96"/>
            <ColumnDefinition Width="192"/>
            <ColumnDefinition Width="192"/>
            <ColumnDefinition Width="192"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>


        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="330"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Canvas Height="650" HorizontalAlignment="Left"  Name="solid1" VerticalAlignment="Top" Width="1000" Opacity="0.9">
            <Canvas.Background>
                <SolidColorBrush Color="#4166f5"/>
            </Canvas.Background>
        </Canvas>

        <Canvas Height="650" HorizontalAlignment="Left"  Name="solid" VerticalAlignment="Top" Width="1000" Opacity="0.75">
            <Canvas.Background>
                <SolidColorBrush Color="#003060"/>
            </Canvas.Background>
        </Canvas>
        <Canvas Height="650" HorizontalAlignment="Left"  Name="solid2" VerticalAlignment="Top" Width="1000" Opacity="0.1">
            <Canvas.Background>
                <SolidColorBrush Color="black"/>
            </Canvas.Background>
        </Canvas>



        <Label x:Name="courseTitle"
               Content="Titlul cursului" 
               FontSize="24" 
               Grid.Row="1" 
               Grid.Column="1" 
               Grid.ColumnSpan="6" 
               HorizontalAlignment="Left" 
               VerticalAlignment="Center"
               Foreground="#F0E1DE"
               />

        <Button Content="Dashboard" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource buttonTemplate}" Margin="1,0,1,0"/>
        <Button Content="Meniu but" Grid.Row="2" Grid.Column="3" Style="{StaticResource buttonTemplate}" Margin="1,0,1,0"/>
        <Button Content="Meniu but" Grid.Row="2" Grid.Column="4" Style="{StaticResource buttonTemplate}" Margin="1,0,1,0"/>
        <Button Content="Meniu but" Grid.Row="2" Grid.Column="5" Style="{StaticResource buttonTemplate}" Margin="1,0,1,0"/>
        <Button Content="Meniu but" Grid.Row="2" Grid.Column="6" Style="{StaticResource buttonTemplate}" Margin="1,0,1,0"/>

        <ListView
            ItemsSource="{Binding Lessons}"
     Name="myLessonsList"
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Grid.RowSpan="2"
            Width="190"
            >
            <ListView.View>
                <GridView  >

                    <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Lessons" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                                    Name="lessonButton"
                                    Content="Lesson"
                       HorizontalAlignment="Left"
                                    Margin="0"
                                    Background="Aqua"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                       Name="downloadButton"
                       Content="V"
                       HorizontalAlignment="Right"
                       Background="Aqua"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>

        </ListView>

        <TextBlock Grid.Row="3" 
                   Grid.Column="3" 
                   Grid.ColumnSpan="4"
                   Margin="2,1,0,0"
                   Background="White"
                   Text="aici va fi view-urul"
                   FontSize="40"
                   />

    </Grid>

</Window>
