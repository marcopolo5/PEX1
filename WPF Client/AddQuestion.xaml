<Window x:Class="WPF_Client.AddQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Client"
        mc:Ignorable="d"
        Title="AddQuestion" Height="492" Width="763">

    <StackPanel>
        <Label Content="Question text:"/>
        <TextBox Name="QuestionNameTxtBox"/>
        <Label Name="Answer1" Content="Answer1"></Label>
        <TextBox Name="Answer1TxtBox" />
        <Label Name="Answer2" Content="Answer2"></Label>
        <TextBox Name="Answer2TxtBox"/>
        <Label Name="Answer3" Content="Answer3"></Label>
        <TextBox Name="Answer3TxtBox"/>
        <Label Name="Answer4" Content="Answer4"></Label>
        <TextBox Name="Answer4TxtBox"/>
        <Label Content="CorrectAnswer"></Label>
        <ComboBox Name="CorrectAnswerComboBox"></ComboBox>
        <Button Content="Save" Name="SaveQuestionButton" Click="SaveQuestionButton_Click" />
        <Button Content="Cancel" Name="CancelButton" />
    </StackPanel>
</Window>
